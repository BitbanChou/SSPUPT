/* pages/select/select.wxss */
.main{
  display: flex;
  flex-direction: column
}

.bjt{
  width:100%;
}

.teamname,.pk{
  margin-top:30rpx;
  margin-left: 50rpx;
}

.pickerview{
  display: flex;
  justify-content: center;
}

picker{
  margin-top: 50rpx;
  width:80%;
  border: solid;
  border-width: 4rpx;
  border-color: gainsboro;
}

.time{
  display: flex;
  flex-direction: column;
  margin-top:100rpx;
  margin-bottom: 50rpx;
}

.timetxt{
  display: flex;
  justify-content: center;
  width:100%;
}

.warn{
  display: flex;
  justify-content: center;
  font-size: 80%;
  color:red;
  margin-top: 30rpx;
}

button{
  margin-top: 20rpx;
  width: 90%;
  border-radius: 20rpx;
}

button::after{
  border-radius: 30rpx;
  border:none;
}

.qr{
  background-color: #4169E1;
}

.anxia{
  background-color: rgba(206, 206, 207, 0.795);
}

.btn{
  font-size: 10pt;
  height: 55rpx;
  background: #ffcc01;
  color: black;
  text-align: center;
  border-radius: 50px;
  margin: 10% 20% 10% 20%;
}

.title{
  position: absolute;
  bottom: 80rpx;
  left: 30rpx;
  z-index:1;
  color: white;
  font-family: "微软雅黑";
  font-size: 16px;
  text-shadow: 0 1px 2px #7b7b7b;
}

.block{
  display: flex;
  flex-direction: column;
}

.list{
  height: 600rpx;
  background: white;
  display: flex;
  border-bottom: 3rpx solid #f9f9f9;
}

.left-content{
  flex: 2;
  padding: 15rpx 20rpx;
  margin-bottom: 3px;  
}

.right-img{
  flex:1;
  padding: 15rpx 20rpx;
}

#title{
  font-family: "微软雅黑";
  font-size: 16px;
}
#contentE{
  font-family: "微软雅黑";
  font-size: 10px;
}

#contentC{
  font-family: "微软雅黑";
  font-size: 12px;
}
.imgS{
  width:100%;
  height: 60%;
  overflow: hidden;
  display: inline-block;
}

.ellipsis{
  -webkit-line-clamp:6; 
  opacity: 0.75 
}
.unellipsis{
  -webkit-line-clamp:0; 
  opacity: 1 
}

