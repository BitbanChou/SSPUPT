/* pages/visitor/visitor.wxss */
page {
  background: #f4f4f4;
  background-image: url(https://image.52pk.com/bdgame/202003/17/1584410111_0.jpg);
  background-size: 100% 100%;
}


.main{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 100rpx;
}

.background{
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.932);
  width: 90%;
  border-radius: 20rpx;
  margin-top: 50rpx;
  margin-left: auto;
  margin-right: auto;
  box-shadow:0rpx 0rpx 20rpx 1rpx gray;
}


.csxx{
  display: flex;
  margin-top: 170rpx;
  font-size: 180%;
  justify-content: center;
  margin-bottom: 50rpx;
}

.word{
  font-style: italic;
  display: flex;
  justify-content: center;
  font-size: 120%;
  margin-top: 30rpx;
}

.welcome{
  font-style: normal;
  color: white;
  display: flex;
  justify-content: center;
  font-size: 120%;
  margin-top: 30rpx;
}

button{
  margin-top: 50rpx;
  width: 90%;
  border-radius: 20rpx;
}

button::after{
  border-radius: 20rpx;
  border:none;
}

.qr{
  background-color: #4169E1;
  margin-bottom: 100rpx;
}

.num{
  color:rgb(177, 45, 45);
}

.btn{
  font-size: 10pt;
  height: 55rpx;
  background: #ffcc01;
  color: black;
  text-align: center;
  border-radius: 50px;
  margin: 5% 5% 5% 5%;
}

.footer {
  color: #ebe8e8;
  font-size: 16px;
  text-align: center;
  margin-top: 80px;
}