.start-box {
  display: flex;
  align-items: center;
  justify-content: center;
  /* height: 10vh; */
  margin-top: 15rpx;
  background-color: orange;
  animation: scaleDraw 5s ease-in-out infinite;
}
.start-box button{
  color: white;
  background-color: orange;
}

.start-box::after{
  border: none;
}

@keyframes scaleDraw {
  /*定义关键帧、scaleDrew是需要绑定到选择器的关键帧名称*/
  0% {
    transform: scale(1);
    /*开始为原始大小*/
  }
  25% {
    transform: scale(1.1);
    /*放大1.1倍*/
  }
  50% {
    transform: scale(1);
  }
  75% {
    transform: scale(1.1);
  }
}
@keyframes living {
  0% {
    transform: scale(1);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.5);
    opacity: 0;
    /*圆形放大的同时，透明度逐渐减小为0*/
  }
  100% {
    transform: scale(1);
    opacity: 0.5;
  }
}