/* pages/info/info.wxss */
.info{
  display: flex;
  flex-direction: column;
  margin: 50rpx;
}

text{
  margin-top: 35rpx;
}

.xg{
  display: flex;
  justify-content: center;
  width:100%;
  font-size:70%;
  color:gray;
}

button{
  margin-top: 30rpx;
  width: 90%;
  border-radius: 20rpx;
  /* background-color: gainsboro; */
  background-color: #ffcc01;
}

button::after{
  border-radius: 20rpx;
  border:none;
  background-color: #ffcc01;
}

/* .anxia{
  background-color: rgba(206, 206, 207, 0.795);
} */

.btn{
  font-size: 10pt;
  height: 70rpx;
  background: #ffcc01;
  color: black;
  text-align: center;
  border-radius: 50px;
  margin: 10% 20% 10% 20%;
}

.ret{
  font-size: 28rpx;
  color: #118fff;
  margin-left: 15rpx;
}
.me{
  height: 100%;
}
.userinfo{
  position: relative;
  width: 750rpx;
  height: 320rpx;
  background: #444;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 28rpx;
}
.img {
  overflow: hidden;
  display: block;
  margin-left: 20px;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  /* width: 49px;
  height: 49px; */
  border-radius: 50%;
}